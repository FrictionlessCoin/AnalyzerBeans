<?xml version="1.0" encoding="UTF-8"?>
<job xmlns="http://eobjects.org/analyzerbeans/job/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Job metadata is purely for human inspection purposes -->
	<job-metadata>
		<author>Kasper SÃ¸rensen</author>
		<created-date>2010-09-26</created-date>
		<updated-date>2010-09-26</updated-date>
		<job-name>Java function example</job-name>
		<job-description>An example using a Java user-written function to transform a
			String</job-description>
		<job-version>1</job-version>
	</job-metadata>

	<source>
		<data-context ref="employees_csv" />
		<columns>
			<column id="col_name" path="employees.csv.employees.name" />
		</columns>
	</source>

	<transformation>
		<transformer>
			<descriptor ref="Java function transformer" />
			<properties>
				<property name="Java code"
					value="package bla;
					import org.eobjects.analyzer.reference.*;
					public class UpperCaseFunction implements Function&lt;String,String&gt; {
						public String run(String str) {
							return str.toUpperCase();
						}
					}" />
			</properties>
			<input ref="col_name" />
			<output id="col_transformed_name" name="Transformed name" />
		</transformer>
	</transformation>

	<analysis>
		<analyzer>
			<descriptor ref="Value distribution" />
			<input ref="col_transformed_name" />
		</analyzer>
	</analysis>

</job>